<project>
    <modelVersion>4.0.0</modelVersion>
    <name>Vinmonopolet</name>
    <groupId>com.hamre.polet</groupId>
    <artifactId>polet-parent</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>frontend</module>
        <module>backend</module>
    </modules>

    <properties>
        <dropwizard.version>1.3.7</dropwizard.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jackson.version>2.9.7</jackson.version>
        <java.version>12</java.version>
        <scala.version>2.12.8</scala.version>
        <scala-major.version>2.12</scala-major.version>
        <scalatest.version>3.0.5</scalatest.version>
        <sql2o.version>1.5.4</sql2o.version>
        <h2.version>1.4.194</h2.version>
        <liquibase.version>3.6.0</liquibase.version>
        <frontend-maven-plugin.version>1.6</frontend-maven-plugin.version>
        <slf4j.version>1.7.21</slf4j.version>
        <mockito.version>2.23.0</mockito.version>
        <smoketurner-swagger.version>1.1.0-1</smoketurner-swagger.version>
        <constretto.version>2.2.3</constretto.version>
        <constretto-dropwizard.version>1.1</constretto-dropwizard.version>
        <snakeyaml.version>1.17</snakeyaml.version>
        <postgresql.version>9.4.1209</postgresql.version>
    </properties>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.dropwizard</groupId>
                <artifactId>dropwizard-bom</artifactId>
                <version>${dropwizard.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson</groupId>
                <artifactId>jackson-bom</artifactId>
                <version>${jackson.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.smoketurner</groupId>
                <artifactId>dropwizard-swagger</artifactId>
                <version>${smoketurner-swagger.version}</version>
            </dependency>
            <dependency>
                <groupId>org.sql2o</groupId>
                <artifactId>sql2o</artifactId>
                <version>${sql2o.version}</version>
            </dependency>
            <dependency>
                <groupId>org.constretto</groupId>
                <artifactId>constretto-core</artifactId>
                <version>${constretto.version}</version>
            </dependency>
            <dependency>
                <groupId>org.constretto</groupId>
                <artifactId>constretto-dropwizard</artifactId>
                <version>${constretto-dropwizard.version}</version>
            </dependency>
            <dependency>
                <groupId>com.h2database</groupId>
                <artifactId>h2</artifactId>
                <version>${h2.version}</version>
            </dependency>
            <dependency>
                <groupId>org.postgresql</groupId>
                <artifactId>postgresql</artifactId>
                <version>${postgresql.version}</version>
            </dependency>
            <dependency>
                <groupId>org.yaml</groupId>
                <artifactId>snakeyaml</artifactId>
                <version>${snakeyaml.version}</version>
            </dependency>
            <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-core</artifactId>
                <version>${liquibase.version}</version>
            </dependency>
            <dependency>
                <groupId>org.scalatest</groupId>
                <artifactId>scalatest_${scala-major.version}</artifactId>
                <version>${scalatest.version}</version>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>${mockito.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>

